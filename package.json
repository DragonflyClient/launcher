{
    "name": "dragonfly-launcher",
    "productName": "Dragonfly Launcher",
    "version": "0.4.0",
    "description": "The launcher for the Dragonfly minecraft client",
    "main": "src/index.js",
    "scripts": {
        "start": "electron .",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "build": "electron-builder build --win --l --mac --publish never",
        "build-linux": "electron-builder build --l --publish never",
        "build-mac": "electron-builder build --mac --publish never",
        "build-win": "electron-builder build --win --publish never",
        "publish": "electron-builder build --win --publish always"
    },
    "build": {
        "extraResources": [
            "./extraResources"
        ],
        "productName": "Dragonfly Launcher",
        "appId": "net.playdragonfly.Launcher",
        "win": {
            "icon": "src/assets/media/png/Logo.png",
            "target": [
                "nsis"
            ]
        },
        "nsis": {
            "installerIcon": "src/assets/media/ico/Logo.ico",
            "uninstallerIcon": "src/assets/media/ico/Logo.ico",
            "uninstallDisplayName": "Dragonfly Launcher",
            "license": "license.txt",
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "directories": {
            "output": "dist"
        },
        "publish": {
            "provider": "github"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/DragonflyClient/launcher-releases.git"
    },
    "keywords": [],
    "author": {
        "name": "Dragonfly",
        "email": "support@playdragonfly.net"
    },
    "license": "MIT",
    "config": {
        "forge": {
            "packagerConfig": {},
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "dragonfly_launcher"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ]
        }
    },
    "dependencies": {
        "adm-zip": "^0.5.1",
        "axios": "^0.21.1",
        "crypto-js": "^4.0.0",
        "discord-rpc": "^3.1.4",
        "dotenv": "^8.2.0",
        "electron-squirrel-startup": "^1.0.0",
        "electron-updater": "^4.3.5",
        "fswin": "^3.19.908",
        "mkdirp": "^1.0.4",
        "querystring": "^0.2.0",
        "request": "^2.88.2",
        "sweetalert2": "^10.11.0",
        "xml2js": "^0.4.23"
    },
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.54",
        "@electron-forge/maker-deb": "^6.0.0-beta.54",
        "@electron-forge/maker-rpm": "^6.0.0-beta.54",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
        "@electron-forge/maker-zip": "^6.0.0-beta.54",
        "electron": "^10.1.5",
        "electron-builder": "^22.9.1"
    }
}
